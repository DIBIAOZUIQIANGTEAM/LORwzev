<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true" >

        <RelativeLayout
            android:id="@+id/re_avatar"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_launcher" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/re_avatar"
            android:text="昵称"
            android:textColor="#353535"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="昨天"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/re_avatar"
            android:orientation="horizontal"
            android:paddingRight="30dp" >

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_toEndOf="@+id/re_avatar"
            android:ellipsize="end"
            android:text="微软小冰：亲爱的 你最近好吗？？？微软小冰：亲爱的 你最近好吗？？？微软小冰：亲爱的 你最近好吗？？？"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_parent_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:clickable="true">

        <RelativeLayout
            android:id="@+id/re_avatar_s"
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/iv_avatar_s"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/re_avatar_s"
            android:text="昵称"
            android:textColor="#353535"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:text="昨天"
            android:textColor="#AAAAAA"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/re_avatar_s"
            android:orientation="horizontal"
            android:paddingRight="30dp"
            android:id="@+id/linearLayout">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <TextView
            android:id="@+id/tv_content_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微软小冰：亲爱的 你最近好吗？？？微软小冰：亲爱的 你最近好吗？？？微软小冰：亲爱的 你最近好吗？？？"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_below="@+id/tv_time_s"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/re_avatar_s" />
    </RelativeLayout>
</LinearLayout>